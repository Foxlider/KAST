<Page
    x:Class="KAST.Desktop.Views.ConsolePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <RichEditBox x:Name="editor" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutomationProperties.Name="Console Output"
                         IsReadOnly="True" Grid.ColumnSpan="2" IsColorFontEnabled="True" FontFamily="Courrier New"/>
            <ProgressBar Margin="5" IsIndeterminate="False" ShowPaused="False" ShowError="False" Grid.Column="0" Grid.Row="1"/>
            <Button Content="&#xE71A;" FontFamily="{StaticResource SymbolThemeFontFamily}" Grid.Column="1" Grid.Row="1"/>

        </Grid>
    </Grid>
</Page>
